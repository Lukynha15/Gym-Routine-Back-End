generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  beginner
  intermediate
  advanced
}

enum DayOfWeek {
  Monday
  Tuesday
  Wednesday
  Thursday
  Friday
  Saturday
  Sunday
}

model User {
  id      String     @id @default(uuid()) @db.VarChar(36)
  name    String     @db.VarChar(255)
  email   String     @unique @db.VarChar(70)
  password String    @db.VarChar(70)
  status  Status

  routines Routine[]
}

model Routine {
  id      String    @id @default(uuid()) @db.VarChar(36)
  name    String
  dayofweek DayOfWeek
  user_id String
  workouts Workout[]

  user User @relation(fields: [user_id], references: [id])
}

model Workout {
  id      String    @id @default(uuid()) @db.VarChar(36)
  name    String
  routine_id String
  sets Set[]

  routine Routine @relation(fields: [routine_id], references: [id])
}

model Set {
  id      String    @id @default(uuid()) @db.VarChar(36)
  weight  Int
  reps    Int
  workout_id String

  workout Workout @relation(fields: [workout_id], references: [id])
}